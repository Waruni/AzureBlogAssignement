<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My Azure Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                
                <a href='@Url.Action("Index", "Post")'>
                    <img height="60px"  src='@Url.Content("~/Content/images/blog.png")' />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Post", "Index", "Post")</li>
                    <li>@Html.ActionLink("Profile", "Details", "Profiles")</li>
                </ul>

                <div style="right: 5px; margin-right: 10px; margin-left: 10px; float: right; margin-top: 10px;">
                    <input type="search" name="searchText" id="searchText" style="height: 34px; padding: 6px 12px; font-size: 14px; line-height: 1.428571429; color: #555555; vertical-align: middle; background-color: #ffffff; border: 1px solid #cccccc; border-radius: 4px;" autocomplete="off" size="100"/>
                    <button class="btn btn-default" onclick="Search();">Search</button>
                </div>

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
<div class="container body-content">
    @RenderBody()
    <hr/>
    <footer>
        <p>&copy; @DateTime.Now.Year - My Blog Application</p>
    </footer>
</div>

<script type="text/javascript">
    $("#searchText").keyup(function(event) {
        if (event.keyCode == 13) {
            Search();
        }
    });


    function Search() {
        var searchText = $("#searchText").val();
        window.location.href = '/Post/Search?searchText=' + searchText;
    }
</script>


@Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
